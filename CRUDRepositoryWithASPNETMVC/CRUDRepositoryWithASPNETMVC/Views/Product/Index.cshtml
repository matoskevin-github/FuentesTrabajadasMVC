
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h3>Product List</h3>
    <a href="@Url.Action("Add","Product")">Add New Product</a>
    <br />
    <table border="1">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Option</th>
        </tr>
        @foreach(var product in ViewBag.products)
        {
        <tr>
            <td>@product.Id</td>
            <td>@product.Name</td>
            <td>@product.Price</td>
            <td>@product.Quantity</td>
            <td>
                <a id="Id" href="@Url.Action("Edit","Product", new { Id = product.Id})">Edit</a>|
            <a id="Id" href="@Url.Action("Delete","Product", new { Id = product.Id})">Delete</a> </td>

        </tr>
        }
    </table>
</body>
</html>
